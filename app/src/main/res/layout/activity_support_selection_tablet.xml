
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#fafafa"
    android:id="@+id/selectionlayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/finallogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="40dp"
        android:text="Welcome to Trellis!"
        android:textSize="30dp"
        android:padding="0dp"
        android:gravity="center"
        android:textColor="#4d4d4d"
        android:id="@+id/welcome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="We're glad you could join us! For this app to work to its full potential, we need you to decide one thing: do you want to give support, or get support?"
        android:textSize="20dp"
        android:layout_below="@+id/welcome"
        android:gravity="center"
        android:textColor="#4d4d4d"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/welcomemessage"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:text="I Want to Give Support"
        android:id="@+id/giveSupportBtn"
        android:background="@drawable/supporterbutton"
        android:textSize="16dp"
        android:textColor="#fafafa"
        android:layout_below="@+id/welcomemessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:text="I WANT TO SEEK SUPPORT"
        android:id="@+id/seekSupportBtn"
        android:textSize="16dp"
        android:background="@drawable/supportbuttons"
        android:textColor="#fafafa"
        android:layout_below="@+id/giveSupportBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
