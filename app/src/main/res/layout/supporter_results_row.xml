<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView6" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_marginRight="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sendbird_ic_launcher"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:singleLine="true"
            android:textColor="#4d4d4d"
            android:text="Topic"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/img_thumbnail"
            android:layout_toEndOf="@+id/img_thumbnail"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true"
            android:layout_alignTop="@+id/img_thumbnail"
            android:layout_marginBottom="3dp"
 />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            android:layout_gravity="center_vertical"
            >


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SUPPORTING X FRIENDS"
            android:id="@+id/supportingView"
            android:textColor="#4d4d4d"
            android:layout_below="@+id/img_thumbnail"
            android:layout_toLeftOf="@+id/quoteView"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4d4d4d"
            android:text="Having struggled with depression for over 7 years, I am here to listen and be a friend."
            android:id="@+id/quoteView"
            android:layout_below="@+id/txt_name"
            android:layout_toRightOf="@+id/img_thumbnail"
            android:layout_toEndOf="@+id/img_thumbnail"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>
