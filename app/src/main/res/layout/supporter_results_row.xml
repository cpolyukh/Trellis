<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:padding="6dip">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:id="@+id/supportIcon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Supporting 10 friends"
        android:id="@+id/txtSupportCount"
        android:layout_below="@+id/supportIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JEN NGUYEN"
        android:id="@+id/txtSupporterName"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/supportIcon"
        android:layout_toEndOf="@+id/supportIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&quot;Happy to just talk or grab some coffee! Don&apos;t be afraid to reach out :)&quot;"
        android:id="@+id/txtQuote"
        android:layout_below="@+id/txtSupporterName"
        android:layout_alignLeft="@+id/txtSupporterName"/>

</RelativeLayout>